<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddNewLutemon">

    <Button
        android:id="@+id/addLutemonViewBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:onClick="addLutemon"
        android:text="Add new Lutemon"
        app:layout_constraintEnd_toEndOf="@+id/lutemonNameField"
        app:layout_constraintStart_toStartOf="@+id/lutemonNameField"
        app:layout_constraintTop_toBottomOf="@+id/lutemonNameField" />

    <RadioGroup
        android:id="@+id/lutemonTyperRG"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/fireType"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Fire"
            android:textAlignment="textStart" />

        <RadioButton
            android:id="@+id/WaterType"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Water"
            android:textAlignment="textStart" />

        <RadioButton
            android:id="@+id/GrassType"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Grass"
            android:textAlignment="textStart" />

    </RadioGroup>

    <EditText
        android:id="@+id/lutemonNameField"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="name your lutemon"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lutemonTyperRG" />
</androidx.constraintlayout.widget.ConstraintLayout>