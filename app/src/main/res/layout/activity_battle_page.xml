<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BattlePage">

    <TextView
        android:id="@+id/userLutemonTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/userImage"
        app:layout_constraintStart_toStartOf="@+id/userImage"
        app:layout_constraintTop_toBottomOf="@+id/userImage" />

    <TextView
        android:id="@+id/enemyLutemonTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/enemyImage"
        app:layout_constraintStart_toStartOf="@+id/enemyImage"
        app:layout_constraintTop_toBottomOf="@+id/enemyImage" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/enemyImage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/enemyHpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/enemyImage"
        app:layout_constraintEnd_toEndOf="@+id/enemyImage"
        app:layout_constraintStart_toStartOf="@+id/enemyImage" />

    <TextView
        android:id="@+id/userHpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/userImage"
        app:layout_constraintEnd_toEndOf="@+id/userImage"
        app:layout_constraintStart_toStartOf="@+id/userImage" />

    <Button
        android:id="@+id/move3Btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/move4Btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/move3Btn"
        app:layout_constraintStart_toEndOf="@+id/move3Btn"
        app:layout_constraintTop_toTopOf="@+id/move3Btn" />

    <Button
        android:id="@+id/move1Btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/move3Btn"
        app:layout_constraintEnd_toEndOf="@+id/move3Btn"
        app:layout_constraintStart_toStartOf="@+id/move3Btn" />

    <Button
        android:id="@+id/move2Btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/move4Btn"
        app:layout_constraintEnd_toEndOf="@+id/move4Btn"
        app:layout_constraintStart_toStartOf="@+id/move4Btn" />
</androidx.constraintlayout.widget.ConstraintLayout>